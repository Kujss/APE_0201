#include<stdio.h>
#include<Locale.h>
int main(){
	
	setlocale(LC_ALL, "portuguese");
	
	//armazenar texto em variaveis
	//declaração
	char nome[50];
	char endereco[50];
	
	printf("Digite o seu nome completo: ", nome);
	
	scanf("%[^\n]", nome);
	
	printf("Olá %s, prazer em te conhecer!", nome);	
	
	//limpar o buffer do teclado
	fflush(stdin);
	
	//entrada de texto usando fgets
	
	printf("\n\nDigite o endereco: ");
	fgets(endereco, 50, stdin);
	
	printf("\n\n%s, o seu produto será entregue no endereço %s", nome, endereco);
	
}
